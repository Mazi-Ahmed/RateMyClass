<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/app.css">   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>Class Show Page</title>
</head>

<div class="container">
    <h1 class="mt-5">RateMyClass</h1>
    <div class="mt-3">
        <h3><%= classData.name %></h3>
        <p>
            <a href="<%= classData.url %>">Enroll Here</a> <br>
            Offered by <%= classData.offered %>
        </p>
    </div>
    <nav class="mb-3">
        <a href="/classes/<%= classId %>/reviews/new" class="btn btn-primary">Rate This Class</a>
    </nav>
    <div>
        <h4>Ratings:</h4>
        <p>
            Quality: <%= classData.quality %> <br>
            Difficulty: <%= classData.difficulty %> <br>
        </p>
    </div>
    <% if (classData.reviews && classData.reviews.length > 0) { %>
        <div class="mt-4">
            <h4>Reviews:</h4>
            <% classData.reviews.forEach((review) => { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Quality: <%= review.quality %></h5>
                        <h6 class="card-subtitle mb-2 text-muted">Difficulty: <%= review.difficulty %></h6>
                        <p class="card-text">Review: "<%= review.review %>"</p>
                        <a href="/classes/<%= classId %>/reviews/<%= review._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/classes/<%= classId %>/reviews/<%= review._id %>/delete" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>
    <a href="/classes" class="btn btn-secondary mt-3">Back To Homepage</a>
</div>

</body>

</html>